      "url":"http://localhost:3333/v1"
    }
  ],
  "paths": {
    "/items": {
      "get": {
        "tags": ["items"],
        "responses": {
          "200": {
            "description": "Lists points' items.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Item"
                  }
                },
                "examples": {
                  "Items": {
                    "$ref": "#/components/examples/Items"
                  }
                }
              }
            }
          }
        }
      }
    },
  },
  "components": {
    "schemas": {
      "Item": {
        "properties": {
          "id": {
            "type": "integer"
          },
          "title": {
            "type": "string"
          },
          "image": {
            "type": "string"
          },
          "image_url": {
            "type": "string"
          }
        }
      },
    },
    "examples": {
      "Items": {
        "value": [
          {
            "id": 1,
            "title": "Lâmpadas",
            "image": "lampadas.svg",
            "image_url": "http://localhost:3333/uploads/items/lampadas.svg"
          }
        ]
      },
      "Point": {
        "value": {
          "point": {
            "id": 1,
            "image": "6f91cfcdd57d-baterias.svg",
            "name": "Recyclus",
            "email": "contact@recyclus.com",
            "whatsapp": "551540331438",
            "latitude": -23.5435933,
            "longitude": -46.6366882,
            "city": "São Paulo",
            "uf": "SP",
            "image_url": "http://localhost:3333/uploads/points/6f91cfcdd57d-baterias.svg"
          },
          "items": [
            {
              "title": "Lâmpadas"
            },
            {
              "title": "Pilhas e baterias"
            }
          ]
        }
      },
    }
  }
}
